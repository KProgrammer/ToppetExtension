{
    "manifest_version": 2,
    "name": "Toppet Extension",
    "version": "2.0",
    "browser_action": {
        "default_title": "Toppet",
        "default_popup": "Toppet/index.html"
    },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["Toppet/content.js"]
		}
	],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
